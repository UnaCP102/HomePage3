<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_marginTop="6dp"
        android:text="@string/txName"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txMemberNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_marginTop="6dp"
        android:text="@string/txMemberNumber"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_marginTop="6dp"
        android:text="@string/txNews"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txReserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_marginTop="6dp"
        android:text="@string/txReserved"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btToEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="員工專區"/>

</LinearLayout>