<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp"
    card_view:cardBackgroundColor="#ffdddddd"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvIdRoomReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:text="IdRoomReservation"
            android:textColor="#000000"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/rbCardStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIdRoomReservation"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            style="?android:attr/ratingBarStyleSmall"/>

        <TextView
            android:id="@+id/tvRatingOpinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/rbCardStar"
            android:text="Opinion"
            android:textColor="#000000"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/tvRatingReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvRatingOpinion"
            android:layout_below="@id/tvRatingOpinion"
            android:text="Review"
            android:textColor="#555555" />

    </RelativeLayout>
</android.support.v7.widget.CardView>